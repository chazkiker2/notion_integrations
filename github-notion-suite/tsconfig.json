{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"lib": [
			"es6"
		],
		"esModuleInterop": true,
		// Emit declarations
		"declaration": true,
		"declarationDir": "./dist/types",
		"declarationMap": true,
		// Rules
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"./dist/**/*"
	]
}
